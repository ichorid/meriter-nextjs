# =============================================================================
# MERITER NEXTJS - Environment Variables Example
# =============================================================================
# Copy this file to .env and fill in your actual values
# =============================================================================

# -----------------------------------------------------------------------------
# Node Environment
# -----------------------------------------------------------------------------
NODE_ENV=development

# -----------------------------------------------------------------------------
# Domain & URLs
# -----------------------------------------------------------------------------
DOMAIN=localhost
APP_URL=http://localhost:8001

# -----------------------------------------------------------------------------
# Database (MongoDB)
# -----------------------------------------------------------------------------
MONGO_URL=mongodb://localhost:27017/meriter
MONGO_APP_PASSWORD=

# -----------------------------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------------------------
JWT_SECRET=your-secret-key-here
JWT_EXPIRATION=365d

# -----------------------------------------------------------------------------
# Fake Data Mode (Development Only)
# -----------------------------------------------------------------------------
FAKE_DATA_MODE=true

# -----------------------------------------------------------------------------
# OAuth Providers
# -----------------------------------------------------------------------------

# Google OAuth
OAUTH_GOOGLE_ENABLED=true
OAUTH_GOOGLE_CLIENT_ID=
OAUTH_GOOGLE_CLIENT_SECRET=
OAUTH_GOOGLE_REDIRECT_URI=http://localhost:8002/api/v1/auth/google/callback

# Yandex OAuth
OAUTH_YANDEX_ENABLED=false
OAUTH_YANDEX_CLIENT_ID=
OAUTH_YANDEX_CLIENT_SECRET=
OAUTH_YANDEX_REDIRECT_URI=http://localhost:8002/api/v1/auth/yandex/callback

# VK OAuth
OAUTH_VK_ENABLED=false
OAUTH_VK_CLIENT_ID=
OAUTH_VK_CLIENT_SECRET=
OAUTH_VK_REDIRECT_URI=

# Telegram OAuth
OAUTH_TELEGRAM_ENABLED=false
OAUTH_TELEGRAM_BOT_TOKEN=
BOT_TOKEN=
BOT_USERNAME=

# Apple OAuth
OAUTH_APPLE_ENABLED=false
OAUTH_APPLE_CLIENT_ID=
OAUTH_APPLE_CLIENT_SECRET=

# Twitter OAuth
OAUTH_TWITTER_ENABLED=false
OAUTH_TWITTER_CLIENT_ID=
OAUTH_TWITTER_CLIENT_SECRET=

# Instagram OAuth
OAUTH_INSTAGRAM_ENABLED=false
OAUTH_INSTAGRAM_CLIENT_ID=
OAUTH_INSTAGRAM_CLIENT_SECRET=

# Sber OAuth
OAUTH_SBER_ENABLED=false
OAUTH_SBER_CLIENT_ID=
OAUTH_SBER_CLIENT_SECRET=

# Mail.ru OAuth
OAUTH_MAILRU_ENABLED=false
OAUTH_MAILRU_CLIENT_ID=
OAUTH_MAILRU_CLIENT_SECRET=
OAUTH_MAILRU_REDIRECT_URI=

# -----------------------------------------------------------------------------
# WebAuthn / Passkeys
# -----------------------------------------------------------------------------
AUTHN_ENABLED=true
RP_ID=localhost
RP_NAME=Meriter
RP_ORIGIN=https://localhost:8001

# -----------------------------------------------------------------------------
# S3 / File Storage
# -----------------------------------------------------------------------------
S3_ENDPOINT=
S3_BUCKET_NAME=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_REGION=us-east-1

# -----------------------------------------------------------------------------
# Features
# -----------------------------------------------------------------------------
ENABLE_COMMENT_VOTING=true

# -----------------------------------------------------------------------------
# Next.js (Web)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_API_URL=http://localhost:8002

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
API_PORT=8002
WEB_PORT=8001

# ========================================
# SMS Authentication Configuration
# ========================================

SMS_ENABLED=true
SMS_API_URL=https://examle.com
SMS_PROVIDER=smsru
SMS_API_ID=your_api_id_here
SMS_FROM=Sender

# ========================================
# Phone Authentication Configuration
# ========================================

PHONE_ENABLED=true

# ========================================
# Email Authentication Configuration
# ========================================

EMAIL_ENABLED=true
EMAIL_SMTP_HOST=
EMAIL_SMTP_PORT=
EMAIL_SMTP_USERNAME=
EMAIL_SMTP_PASSWORD=
EMAIL_SMTP_IS_SECURE=true