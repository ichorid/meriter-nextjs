# Application Environment
NODE_ENV=development
PORT=8002

# JWT Configuration
JWT_SECRET=your_jwt_secret_here

# MongoDB Configuration
MONGO_URL=mongodb://username:password@host:port/database
MONGO_URL_MERITERRA=mongodb://username:password@host:port/meriterra
MONGO_URL_MERITERCORP=mongodb://username:password@host:port/meritercorp
MONGO_URL_TEST=mongodb://username:password@host:port/test

# MongoDB Connection Name
MONGO_CONNECTION_NAME=MONGO_URL_PROD_REMOTE_2

# Telegram Bot Configuration
BOT_TOKEN_CORP=your_telegram_bot_token_corp
BOT_TOKEN_DEV=your_telegram_bot_token_dev
BOT_USERNAME_CORP=your_bot_username_corp
BOT_USERNAME_DEV=your_bot_username_dev

# Telegram Chat IDs
MERITERRA_TG_CHAT_ID=your_meriterra_chat_id
MARKET_TG_CHAT_ID=your_market_chat_id
SELF_COMPANY_TG_CHAT_ID=your_company_chat_id

# Telegram API
TELEGRAM_API_URL=https://api.telegram.org

# Application URLs
APP_URL_CORP=https://your-production-url.com
APP_URL_DEV=https://your-dev-url.com

# AWS S3 Configuration (VK Cloud Object Storage)
S3_ACCESS_KEY_ID=your_s3_access_key
S3_SECRET_ACCESS_KEY=your_s3_secret_key
S3_ENDPOINT=https://hb.bizmrg.com

# Storage URLs
TELEGRAM_AVATAR_BASE_URL=https://telegram.hb.bizmrg.com/telegram_small_avatars
DICEBEAR_API_URL=https://avatars.dicebear.com/api/jdenticon

# Environment Flag (true for production, false for development)
IS_CORP=false
