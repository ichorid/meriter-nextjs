# Set default behavior to automatically normalize line endings
* text=auto

# TypeScript
*.ts text eol=lf
*.tsx text eol=lf

# JavaScript
*.js text eol=lf
*.jsx text eol=lf

# JSON
*.json text eol=lf

# Config files
*.yml text eol=lf
*.yaml text eol=lf
.editorconfig text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf

# Markdown
*.md text eol=lf

# Shell scripts
*.sh text eol=lf

# Exclude from exports
.gitattributes export-ignore
.gitignore export-ignore
.editorconfig export-ignore
SECURITY_AUDIT_SUMMARY.md export-ignore
PUBLISHING_GUIDE.md export-ignore
REPOSITORY_STATUS.md export-ignore
clean-repo.sh export-ignore
