{
  "name": "@meriter/api",
  "version": "0.12.0",
  "description": "",
  "author": "",
  "private": true,
  "license": "SEE LICENSE IN LICENSE",
  "scripts": {
    "prebuild": "pnpm --dir ../libs/shared-types build && rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "node dist/apps/meriter/main",
    "start:prod": "node dist/apps/meriter/main",
    "dev": "nest build --webpack --webpackPath webpack-hmr.config.js --watch",
    "debug": "nest start --debug --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/meriter/test/jest-e2e.json --forceExit"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.920.0",
    "@aws-sdk/lib-storage": "^3.920.0",
    "@meriter/shared-types": "link:../libs/shared-types",
    "@nestjs/common": "^10.4.20",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.20",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mongoose": "^10.1.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.4.20",
    "@nestjs/schedule": "^4.1.2",
    "axios": "^1.13.1",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cookie-parser": "^1.4.7",
    "cyrillic-to-translit-js": "^3.2.1",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.2",
    "nestjs-telegram": "^1.2.0",
    "node-xlsx": "^0.24.0",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^6.0.1",
    "rxjs": "^7.8.2",
    "sharp": "^0.33.5",
    "uid": "^2.0.2",
    "xml-js": "^1.6.11",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@golevelup/ts-jest": "^0.7.0",
    "@nestjs/cli": "^10.4.9",
    "@nestjs/schematics": "^10.2.3",
    "@nestjs/testing": "^10.4.20",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^4.17.25",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/multer": "^1.4.13",
    "@types/node": "^22.18.13",
    "@types/passport-google-oauth20": "^2.0.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.2.3",
    "prettier": "^3.6.2",
    "run-script-webpack-plugin": "^0.2.3",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "webpack": "^5.102.1",
    "webpack-node-externals": "^3.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "apps/**/*.ts",
      "libs/**/*.ts",
      "!apps/**/test/**"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "@meriter/shared-types": "<rootDir>/../libs/shared-types/src",
      "@meriter/shared-types/(.*)": "<rootDir>/../libs/shared-types/src/$1",
      "@common/abstracts/(.*)": "<rootDir>/libs/abstracts/src/$1",
      "@common/abstracts": "<rootDir>/libs/abstracts/src",
      "@common/extapis/(.*)": "<rootDir>/libs/extapis/src/$1",
      "@common/extapis": "<rootDir>/libs/extapis/src",
      "@common/lambdas/(.*)": "<rootDir>/libs/lambdas/src/$1",
      "@common/lambdas": "<rootDir>/libs/lambdas/src",
      "@common/tg-sync/(.*)": "<rootDir>/libs/tg-sync/src/$1",
      "@common/tg-sync": "<rootDir>/libs/tg-sync/src"
    }
  },
  "packageManager": "pnpm@10.20.0"
}
