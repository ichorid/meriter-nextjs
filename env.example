# Meriter Environment Configuration
# Copy this file to .env and fill in the actual values

# ==============================================================================
# DOMAIN CONFIGURATION
# ==============================================================================
# Domain name for Caddy (use localhost for local development)
DOMAIN=localhost

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================
# MongoDB connection string
# Format: mongodb://username:password@host:port/database
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/database
MONGODB_URI=mongodb://localhost:27017/meriter

# ==============================================================================
# WEB APPLICATION (Next.js)
# ==============================================================================
# Port for Next.js application (default: 8001)
WEB_PORT=8001

# Next.js specific
NEXT_PUBLIC_API_URL=http://localhost:8002

# ==============================================================================
# API APPLICATION (NestJS)
# ==============================================================================
# Port for NestJS API (default: 8002)
API_PORT=8002

# JWT Configuration (for session tokens after Telegram Web Auth)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=7d

# ==============================================================================
# TELEGRAM AUTHENTICATION & BOT
# ==============================================================================
# Bot token from @BotFather (REQUIRED)
# Used for: community features, Telegram Web Auth verification
TELEGRAM_BOT_TOKEN=

# Bot username without @ (REQUIRED)
# Used by Telegram Login Widget on the web frontend
BOT_USERNAME=meriterbot

# Application URL for bot messages and redirects
APP_URL=https://meriter.pro

# ==============================================================================
# AWS S3 CONFIGURATION (if using S3 for file storage)
# ==============================================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# ==============================================================================
# SESSION & SECURITY
# ==============================================================================
SESSION_SECRET=your-session-secret-change-this-in-production
COOKIE_SECRET=your-cookie-secret-change-this-in-production

# ==============================================================================
# NODE ENVIRONMENT
# ==============================================================================
NODE_ENV=production

# ==============================================================================
# LOGGING
# ==============================================================================
LOG_LEVEL=info

