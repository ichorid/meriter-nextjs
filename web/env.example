# ========================================
# Backend API Configuration
# ========================================

# Backend server URL for API proxy (where /api/rest/* requests are forwarded)
# Development: http://localhost:8002
# Production: https://api.meriter.ru (or your backend domain)
BACKEND_URL=http://localhost:8002


# ========================================
# MongoDB Connection Configuration
# ========================================

# Primary MongoDB connection (used by Next.js app and schema)
# Default: mongodb://127.0.0.1:27017/meriter
MONGO_URL=mongodb://127.0.0.1:27017/meriter

# Test environment MongoDB (used by Jest tests when NODE_ENV=test)
MONGO_URL_TEST=mongodb://127.0.0.1:27017/meriter_test


# ========================================
# Authentication & Security
# ========================================

# JWT Secret for authentication (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=afdasdfubqi4tb2i4bpadfs132


# ========================================
# Telegram Bot Configuration
# ========================================

# Bot token for Telegram API
# TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# Bot username (without @)
# BOT_USERNAME=meriterbot

# Application URL (used in bot messages and links)
# APP_URL=https://meriter.ru


# ========================================
# S3/Object Storage Configuration (OPTIONAL)
# ========================================

# S3-compatible storage credentials for Telegram avatar caching
# If not set, avatar/image upload features will be disabled
# Used by: bots/telegram/actions.ts (telegramGetChatPhotoUrl)
# Service: Mail.ru Cloud S3, AWS S3, MinIO, or any S3-compatible storage

# S3_ACCESS_KEY_ID=your_access_key
# S3_SECRET_ACCESS_KEY=your_secret_key
# S3_ENDPOINT=https://hb.bizmrg.com

# Note: Without S3 credentials, the app will:
# - Skip uploading Telegram avatars
# - Return empty strings for avatar URLs
# - Continue functioning normally (avatars just won't display)


# ========================================
# Application Environment
# ========================================

# Node environment (set automatically by npm/jest)
# NODE_ENV=development
# NODE_ENV=production
# NODE_ENV=test


# ========================================
# Test Mode Flags (used in Jest tests)
# ========================================

# Disable external API calls in tests
# noAxios=true

# Mock admin privileges in tests
# admin=true

# Bypass JWT auth (test mode only - NEVER use in production)
# SKIP_AUTH=true
