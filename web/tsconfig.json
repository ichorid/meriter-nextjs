{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "maxNodeModuleJsDepth": 0,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "forceConsistentCasingInFileNames": true,
    // Allow parsing of backend NestJS types referenced via type-only imports (tRPC AppRouter).
    // Without this, Next's typecheck can fail on decorator syntax in imported backend files.
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "incremental": true,
    "paths": {
      "@/*": [
        "./*"
      ],
      "@app/*": [
        "app/*"
      ],
      "@features/*": [
        "features/*"
      ],
      "@shared/*": [
        "shared/*"
      ],
      "@types/*": [
        "types/*"
      ],
      "@lib/*": [
        "shared/lib/*"
      ],
      "@meriter/shared-types": [
        "../../libs/shared-types/dist/index.d.ts"
      ],
      "@config/*": [
        "../config/*"
      ],
      "@styles/*": [
        "../styles/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/**",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "../api/**/*"
  ]
}
